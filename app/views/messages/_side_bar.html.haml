.Side-bar
  .Side-bar__user-name
    .Top-items
      %p.Top-items__name
        = current_user.name
      .Top-items__icons
        = link_to new_group_path(current_user) do
          =icon('far', 'edit', class: "Top-items__icon")
        = link_to edit_user_path(current_user) do
          =icon('fas', 'cog', class: "Top-items__icon")
        
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
  