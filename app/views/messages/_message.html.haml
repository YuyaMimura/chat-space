.Message-info{data: {message: {id: message.id}}}
  .Message-info__top
    .Message-info__name
      = message.user.name
    .Message-info__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message-info__content
    - if message.content.present?
      =message.content
    = image_tag message.image.url, class: 'message__image' if message.image.present?